<%= render  partial: '/layouts/nav' %>
<div class="container">
  <h1 class="center">Welcome
    <%= @user.email %>
  </h1>


  <div class="row">
    <div class="col s2 push-s10">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Current Weather</span>
          <p>
            <%= @weather[:currently][:temperature].round %>&#8457;</p>
          <p><em>
              <%= @weather[:currently][:summary] %> <em></p>
        </div>
      </div>
    </div>
  </div>
  <div class="forecast">
    <div class="row">
      <div class="col s6 push-s6">
        <div class="card">
          <div class="card-content">
            <span class="card-title">5-Day Forecast</span>
            <p><%= @weather[:daily][:summary] %></p>
          </div>

          <table>
            <thead>
              <tr>
                  <th><%=@forecast[1][0]%></th>
                  <th><%=@forecast[2][0]%></th>
                  <th><%=@forecast[3][0]%></th>
                  <th><%=@forecast[4][0]%></th>
                  <th><%=@forecast[5][0]%></th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td>
                  High: <%= @forecast[1][1] %>
                  <br>
                  Low: <%= @forecast[1][2] %>
                </td>
                <td>
                  High: <%= @forecast[2][1] %>
                  <br>
                  Low: <%= @forecast[2][2] %>
                </td>
                <td>
                  High: <%= @forecast[3][1] %>
                  <br>
                  Low: <%= @forecast[3][2] %>
                </td>
                <td>
                  High: <%= @forecast[4][1] %>
                  <br>
                  Low: <%= @forecast[4][2] %>
                </td>
                <td>
                  High: <%= @forecast[5][1] %>
                  <br>
                  Low: <%= @forecast[5][2] %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>